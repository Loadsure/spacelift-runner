if npm run lint:docker --silent; then
  echo "✅ Docker lint"
else
  echo "❌ Docker lint"
  exit 1
fi

if npm run lint:markdown --silent; then
  echo "✅ Markdown lint"
else
  echo "❌ Markdown lint"
  exit 1
fi

if npm run sec --silent; then
  echo "✅ Security check"
else
  echo "❌ Security check"
  exit 1
fi
